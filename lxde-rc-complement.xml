<!-- Add this below </keybind> on .config/openbox/lxde-rc.xml --> 

<!-- Audio --> 
<keybind key="XF86AudioRaiseVolume">
	<action name="Execute">
		<command>amixer -q sset Master 5%+</command>
	</action>
</keybind>
<keybind key="XF86AudioLowerVolume">
	<action name="Execute">
		<command>amixer -q sset Master 5%-</command>
	</action>
</keybind>
<keybind key="XF86AudioMute">
	<action name="Execute">
		<command>amixer -q sset Master toggle</command>
	</action>
</keybind>

<!-- Terminal shortcut --> 

<keybind key="C-A-t">
	<action name="Execute">
		<execute>lxsession-default terminal</execute>
	</action>
</keybind>

<!-- Launch xfce4-screenshot when PrintScreen is pressed -->

<keybind key="Print">
	<action name="Execute">
		<command>xfce4-screenshooter </command>
	</action>
</keybind>

<!-- Launch xfce4-screenshot when shift + PrintScreen is pressed. Select region and copy to clipboard -->

<keybind key="S-Print">
	<action name="Execute">
		<command>xfce4-screenshooter -r -c</command>
	</action>
</keybind>

<!-- Lock --> 
<keybind key="W-l">
	<action name="Execute">
		<command>xscreensaver-command -lock</command>
	</action>
</keybind>

<!-- Multimedia keys for spotify-->
<!-- https://community.spotify.com/t5/Desktop-Linux-Windows-Web-Player/prev-play-next-keys-don-t-work-in-Lubuntu/m-p/874541#M94232 -->

<keybind key="XF86AudioPlay">
	<action name="Execute">
		<command>dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause</command>
	</action>
</keybind>
<keybind key="XF86AudioStop">
	<action name="Execute">
		<command>dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop</command>
	</action>
</keybind>
<keybind key="XF86AudioNext">
	<action name="Execute">
		<command>dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next</command>
	</action>
</keybind>
<keybind key="XF86AudioPrev">
	<action name="Execute">
		<command>dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous</command>
	</action>
</keybind>

